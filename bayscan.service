[Unit]
Description=BayScan - Smart Fishing Forecasts
After=network.target

[Service]
Type=simple
User=evo
WorkingDirectory=/home/evo/fishing-forecast
Environment="PATH=/home/evo/fishing-forecast/venv/bin"
ExecStart=/home/evo/fishing-forecast/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
